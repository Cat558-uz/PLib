local function CreateButton(parent, text, description, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 60)
    button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    button.Text = ""
    button.Parent = parent
    button.AutoButtonColor = true

    -- Label principal (Name)
    local title = Instance.new("TextLabel")
    title.Parent = button
    title.Size = UDim2.new(1, -10, 0, 20)
    title.Position = UDim2.new(0, 5, 0, 5)
    title.BackgroundTransparency = 1
    title.Text = text
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Font = Enum.Font.GothamBold
    title.TextSize = 14

    -- Label da descrição (fica embaixo)
    local desc = Instance.new("TextLabel")
    desc.Parent = button
    desc.Size = UDim2.new(1, -10, 0, 0) -- altura vai ser ajustada
    desc.Position = UDim2.new(0, 5, 0, 28)
    desc.BackgroundTransparency = 1
    desc.Text = description or ""
    desc.TextColor3 = Color3.fromRGB(200, 200, 200)
    desc.TextXAlignment = Enum.TextXAlignment.Left
    desc.TextYAlignment = Enum.TextYAlignment.Top
    desc.Font = Enum.Font.Gotham
    desc.TextSize = 12
    desc.TextWrapped = true
    
    -- Ajusta altura automaticamente conforme texto
    desc:GetPropertyChangedSignal("TextBounds"):Connect(function()
        desc.Size = UDim2.new(1, -10, 0, desc.TextBounds.Y)
    end)

    button.MouseButton1Click:Connect(function()
        if callback then callback() end
    end)

    return button
end
